<tr<%= qing.condition ? " class=\"conditional\"".html_safe : "" %>>
  <td class="name">
    <% if qing.condition %>
      <div class="condition"><%= t("question.answer_only_caps") %> <%= qing.condition.to_s %></div>
    <% end %>
    <div class="name">
      <%= qing.rank %>. <%= reqd_sym if qing.required? %>
      <%= qing.question.name %>
    </div>
  </td>
  <td class="answer <%= qing.question.qtype.name %>_answer">
    <% # print options if necessary %>
    <% if qing.question.qtype.has_options? %>
      <% qing.question.options.each do |opt| %>
        <div class="option">
          <div class="option_box"></div>
          <%= opt.name %>
        </div>
      <% end %>
    <% else %>
      <div class="answer_box"></div>
    <% end %>
  </td>
</tr>