<% if form_mode == :show %>

  <div class="ro-val" data-val="<%= form.object.option_set_id %>"><%= form.object.option_set.try(:name) %></div>

<% else %>

  <%= form.select(:option_set_id, sel_opts_from_objs(@option_sets), {:include_blank => true}, {:class => "form-control"}) %>

  <% if form_mode != :show %>
    <%= link_to('+ ' + t('option_set.create_link'), '#', :class => 'create_option_set') %>
    <%= loading_indicator %>
  <% end %>

<% end %>