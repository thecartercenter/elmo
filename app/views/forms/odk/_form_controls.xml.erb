<% organize_qing_groups(@form.arrange_descendants).each do |item, subtree| %>
  <% if item.is_a?(QingGroup) %>
    <%= content_tag("group") do %>
      <%= content_tag("label", item.group_name) %>
      <% if item.repeats %>
        <%= render('forms/odk/repeat_group', group: item, fragments: subtree) %>
      <% else %>
        <%= render('forms/odk/group', group: item, fragments: subtree) %>
      <% end %>
    <% end %>
  <% else %>
    <%= render('forms/odk/questioning', qing: item) unless item.hidden %>
  <% end %>
<% end %>
